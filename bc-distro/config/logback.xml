<configuration scan="true" scanPeriod="30 seconds">

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="all"  class="ch.qos.logback.core.FileAppender">
        <file>./logs/all.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="bcnode"  class="ch.qos.logback.core.FileAppender">
        <file>./logs/bc-node.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="bcnode" level="info" additivity="true">
        <appender-ref ref="bcnode" />
    </logger>

    <root level="info">
        <appender-ref ref="stdout" />
        <appender-ref ref="all" />
    </root>

    <shutdownHook/>

</configuration>